@model IEnumerable<Model_View_Controller.Models.Pessoa>

@{
    ViewData["Title"] = "Principal";
}

<h3>Lista de Pessoas</h3>

<p>
    <a asp-action="CriarPessoa">Criar nova pessoa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="AtualizarPessoa" asp-route-id="@item.PessoaId">Atualizar</a> |
                <a asp-action="ExcluirPessoa" asp-route-id="@item.PessoaId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
